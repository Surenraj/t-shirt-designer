<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".MyOrder">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:id="@+id/my_ordertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Order"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"
        android:textStyle="bold"
        />

        <TextView
            android:visibility="gone"
            android:id="@+id/no_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No orders till now"
            android:textSize="25sp"
            android:fontFamily="@font/varela_round"
            android:layout_marginTop="300dp"
            android:textColor="@color/white"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/orderpreviewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ordertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/varela_round"
            android:textStyle="bold"
            android:text="Preview"
            android:textColor="@color/black"
            android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_below="@+id/ordertitle"/>

            <TextView
                android:id="@+id/nameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poovarasan"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/ordertitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_below="@+id/nameid"/>

            <TextView
                android:id="@+id/phoneid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/nameid"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_below="@+id/phoneid"/>

            <TextView
                android:id="@+id/breif_address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="No:24, 8th street, bharathy nagar, old perungalathur, chennai-63 "
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@+id/phoneid"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/breif_address"/>

            <TextView
                android:id="@+id/payid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="card"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/breif_address"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/payid"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on process"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/payid"/>





            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T-Shirt :"
            android:fontFamily="@font/varela_round"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:textColor="@color/black"
            android:textSize="21sp"
                android:textStyle="bold"
            android:layout_below="@+id/status"/>

        <TextView
            android:id="@+id/shirtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.200/-"
            android:fontFamily="@font/varela_round"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_below="@+id/status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo :"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_below="@+id/shirtid"/>

            <TextView
                android:id="@+id/logoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.50/-"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/shirtid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/logoid"/>

            <TextView
                android:id="@+id/countid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/logoid"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXL :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/countid"/>

            <TextView
                android:id="@+id/xxxlid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/countid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXL :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xxxlid"/>

            <TextView
                android:id="@+id/xxlid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xxxlid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xxlid"/>

            <TextView
                android:id="@+id/xlid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xxlid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xlid"/>

            <TextView
                android:id="@+id/lid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/xlid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/lid"/>

            <TextView
                android:id="@+id/mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/lid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/mid"/>

            <TextView
                android:id="@+id/sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/mid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total :"
                android:textStyle="bold"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:layout_below="@+id/sid"/>

            <TextView
                android:id="@+id/totalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.18500/-"
                android:fontFamily="@font/varela_round"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/sid"/>

        </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>